<body>

<div id="player"></div>
<div id="obstacle"></div>
<div id="ground"></div>

<script>
let player = document.getElementById("player");
let obstacle = document.getElementById("obstacle");

let isJumping = false;
let velocity = 0;
let gravity = 1;

document.addEventListener("click", function() {
  if (!isJumping) {
    isJumping = true;
    velocity = 15;
  }
});

function gameLoop() {
  // Прыжок
  if (isJumping) {
    velocity -= gravity;
    let bottom = parseInt(player.style.bottom) || 50;
    bottom += velocity;
    player.style.bottom = bottom + "px";

    if (bottom <= 50) {
      player.style.bottom = "50px";
      isJumping = false;
    }
  }

  // Движение препятствия
  let obstacleRight = parseInt(obstacle.style.right) || -40;
  obstacleRight += 5;
  obstacle.style.right = obstacleRight + "px";

  if (obstacleRight > window.innerWidth) {
    obstacle.style.right = "-40px";
